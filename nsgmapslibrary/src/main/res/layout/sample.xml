<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/car_toyota"/>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/img"
            android:gravity="center"
            android:layout_weight="1"
            android:text="VEHICLE DETAILS"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/ChalsisNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="ChalsisNumber"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/Spinner_Ch_Number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ChalsisNumber"
                android:hint="ChalsisNumber" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_margin="30dp"
            android:layout_below="@+id/layout2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/linier2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:id="@+id/frame1"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:elevation="4dp">
                        <RelativeLayout
                            android:id="@+id/rel1"
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="120dp"
                                    android:textColor="#ffffff"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/rounded_corner_textview1"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Activity"
                                    android:textSize="18dp" />

                                <ImageView
                                    android:id="@+id/img_roll_out"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:background="@drawable/circle_background_roll_out"
                                    android:layout_margin="10dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/roll_out" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="120dp"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/img_source"
                                    android:text="Roll-out"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"/>
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel2"
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/rel1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:textColor="#ffffff"
                                    android:paddingRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/rounded_corner_textview2"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Brand"
                                    android:textSize="18dp" />

                                <ImageView
                                    android:id="@+id/img_brand"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/circle_background_brand"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/toyota_white"
                                    />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_height="wrap_content"
                                    android:layout_width="120dp"
                                    android:layout_alignParentRight="true"
                                    android:textColor="#ffffff"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:layout_below="@+id/img_destination"
                                    android:text="Toyota"
                                    android:textSize="18dp" />
                            </LinearLayout>


                        </RelativeLayout>
                    </RelativeLayout>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:id="@+id/frame2"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:elevation="4dp">
                        <RelativeLayout
                            android:id="@+id/rel3"
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_height="wrap_content"
                                    android:layout_width="120dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/rounded_corner_textvie3"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Source"
                                    android:textSize="18dp" />

                                <ImageView
                                    android:id="@+id/img_src"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:padding="10dp"
                                    android:background="@drawable/circle_background_3"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/deck"/>

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_height="wrap_content"
                                    android:layout_width="120dp"
                                    android:layout_alignParentLeft="true"
                                    android:textColor="#ffffff"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:layout_below="@+id/img_roll_out"
                                    android:text="Deck 3"
                                    android:textSize="18dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel4"
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/rel3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="120dp"
                                    android:background="@drawable/rounded_corner_textview4"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#ffffff"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Destination"
                                    android:textSize="18dp" />

                                <ImageView
                                    android:id="@+id/img_dest"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:padding="10dp"
                                    android:background="@drawable/circle_background_1"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/loc_marker_white"/>

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_height="wrap_content"
                                    android:layout_width="120dp"
                                    android:layout_alignParentRight="true"
                                    android:textColor="#ffffff"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:layout_below="@+id/img_brand"
                                    android:text="Yard-3"
                                    android:textSize="18dp" />
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/driver"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/circle_background_1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:src="@drawable/route_blue"/>



            <ImageButton
                android:id="@+id/call"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/circle_background_1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:src="@drawable/route_blue"/>

            <ImageButton
                android:id="@+id/route"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/circle_background_1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:src="@drawable/route_white_40"/>


        </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
